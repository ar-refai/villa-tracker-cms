@page "/villas"
@using VillaManager.Client.Services
@using VillaManager.Client.Models
@inject VillaApiService VillaService
@inject NavigationManager Nav
@inject IJSRuntime JS

<h3 class="page-title mb-4">
    <i class="fas fa-home text-primary"></i> Villas
</h3>
<div class="p-6 max-w-sm bg-white rounded-lg border border-gray-200 shadow-md">
    <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900">Villa Creator</h5>
    <p class="mb-3 font-normal text-gray-700">Easily create villas with images & details.</p>
    <a href="/create-villa" class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800">
        Get started
    </a>
</div>


<div class="d-flex justify-content-between align-items-center mb-3">
    <a href="/create-villa" class="btn btn-success shadow-sm">
        <i class="fas fa-plus-circle"></i> Add New Villa
    </a>
</div>

@if (villas == null)
{
    <div class="text-center text-muted my-5">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;"></div>
        <p class="mt-3">Loading villas...</p>
    </div>
}
else if (!villas.Any())
{
    <div class="alert alert-info shadow-sm">
        <i class="fas fa-info-circle"></i> No villas found.  
        <a href="/create-villa" class="btn btn-link p-0 ms-2">Create one now</a>
    </div>
}
else
{
    <div class="table-responsive shadow-sm rounded">
        <table class="table table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Location</th>
                    <th scope="col">Description</th>
                    <th scope="col" class="text-center" style="width: 200px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var v in villas)
                {
                    <tr>
                        <td class="fw-bold">@v.Name</td>
                        <td>@v.Location</td>
                        <td>@v.Description</td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a href="/create-villa" class="btn btn-success shadow-sm">
                                    <i class="fas fa-plus-circle"></i> Add New Villa
                                </a>
                                <a href="@($"/villa/{v.Id}")" class="btn btn-primary shadow-sm">
                                    <i class="fas fa-eye"></i> View Details
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    private List<VillaDto>? villas;

    protected override async Task OnInitializedAsync()
    {
        villas = await VillaService.GetAllAsync();
    }

    private async Task DeleteVilla(int id)
    {
        var confirmed = await JS.InvokeAsync<bool>("confirm", "Are you sure you want to delete this villa?");
        if (confirmed)
        {
            await VillaService.DeleteAsync(id);
            villas = await VillaService.GetAllAsync();
        }
    }
}
